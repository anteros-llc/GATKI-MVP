{{ 'section-card-lips.css' | asset_url | stylesheet_tag }}

<!-- Dynamic Section -->
<section class="3up-card">
  <div class="content-wrapper">
    <h2 class="module-title">{{ section.settings.title }}</h2>
    <h5 class="module-description">{{ section.settings.description }}</h5>
    <div class="cards-container">
      {% for block in section.blocks %}
        <div class="card">
          <div class="card-header">
            <span class="card-category">{{ block.settings.category }}</span>
            <span class="card-number">{{ block.settings.number }}</span>
          </div>
          <h3 class="card-title">{{ block.settings.title }}</h3>
          {% if block.settings.description != blank %}
            <p class="card-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    {% if section.settings.learn_more_link != blank %}
      <a href="{{ section.settings.learn_more_link }}" class="learn-more">
        {{- section.settings.learn_more_text }}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 17" height="15" width="15">
          <path fill="#91693C" d="M13.5875 2.65869L14 3.07119V13.5712H12.5375V5.18994L3.125 14.6587L2 13.5337L11.45 4.10244H3.0875V2.65869H13.5875Z"/>
        </svg>
      </a>
    {% endif %}
  </div>
</section>

<!-- Shopify schema for dynamic settings -->
{% schema %}
{
  "name": "Card Module",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Simple formula for sensitive and delicate lips."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "The LIP DEW formula combines the anti-inflammatory power of Chenpi Oil and the hydrating benefits of peptides to soothe, plump, and protect delicate lips."
    },

    {
      "type": "text",
      "id": "learn_more_text",
      "label": "Learn More Text",
      "default": "Learn more â†’"
    },
    {
      "type": "url",
      "id": "learn_more_link",
      "label": "Learn More Link",
    },
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "id": "category",
          "label": "Card Category",
          "default": "ESSENTIALS"
        },
        {
          "type": "text",
          "id": "number",
          "label": "Card Number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Card Title",
          "default": "Anti-inflammatory, hydrating, and plumping"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Card Description",
          "default": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cards3UP",
      "category": "Cards"
    }
  ]
}
{% endschema %}
