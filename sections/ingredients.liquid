<section class="made-without">
  <div class="point-wrapper">
    <label class="eyebrow">{{ section.settings.eyebrow }}</label>
    <ul class="point-list">
      {%- for block in section.blocks -%}
        <li class="bulletpoint-item">
          <h4>&times; {{ block.settings.bulletpoint_text }}</h4>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</section>

<style>
  .made-without {
    color: var(--color-chenpi);
    padding: 3rem 0;
    background-color: var(--color-albedo);
    text-align: center;
  }

  .point-wrapper {
    width: 75%;
    margin: 0 auto;
  }

  .point-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap; /* Allows items to wrap if they donâ€™t fit */
  }

  .bulletpoint-item h4 {
    text-transform: uppercase;
  }

  /* Media query for smaller screens */
  @media (max-width: 768px) {
    .point-list {
      display: block; /* Switch to block for stacking */
    }

    .bulletpoint-item {
      margin-bottom: 1rem; /* Add spacing between stacked items */
    }

    .bulletpoint-item:last-child {
      margin-bottom: 0; /* Remove bottom margin for the last item */
    }
  }
</style>

{% schema %}
{
  "name": "Made Without",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "14 INGREDIENTS. NOTHING EXTRA."
    }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Point",
      "settings": [
        {
          "type": "text",
          "id": "bulletpoint_text",
          "label": "Point",
          "default": "Bulletpoint"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "point Module",
    }
  ]
}
{% endschema %}
