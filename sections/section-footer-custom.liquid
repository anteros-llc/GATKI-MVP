{{ 'base.css' | asset_url | stylesheet_tag }}
{{ 'section-footer-custom.css' | asset_url | stylesheet_tag }}

<footer class="custom-footer">
  <div class="custom-footer-container">
    <!-- Newsletter Section -->
    <div class="custom-footer-newsletter">
      <div class="klaviyo-form-XPfEf9"></div>
    </div>
    <div class="navigation">
      {% for block in section.blocks %}
        {% if block.settings.heading or block.settings.menu.links.size > 0 %}
          <div class="custom-footer-column">
            {% if block.settings.heading %}
              <label class="custom-footer-heading">{{ block.settings.heading }}</label>
            {% endif %}
            {% if block.settings.menu.links.size > 0 %}
              <ul class="custom-footer-list">
                {% for link in block.settings.menu.links %}
                  <li class="custom-footer-list-item">
                    <a
                      href="{{ link.url }}"
                      class="custom-footer-link"
                      {% if link.new_window %}
                        target="_blank"
                      {% endif %}
                    >
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <!-- Logo Section -->
  <div class="custom-footer-logo">
    <img
      src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/GATKI_Logo_-_B.svg?v=1730946117"
      alt="Company Logo"
      class="custom-footer-logo-img"
      width="100%"
      height="100%"
    >
  </div>

  <!-- Bottom Section -->
  <div class="custom-footer-bottom">
    <h6 class="custom-footer-copyright">&copy; {{ 'now' | date: '%Y' }} GATKI by Anteros LLC.</h6>
    <ul class="custom-footer-policies">
      {% for policy in shop.policies %}
        {% if policy %}
          <li class="custom-footer-policy-item">
            <h6>
              <a href="{{ policy.url }}" class="custom-footer-policy-link">{{ policy.title }}</a>
            </h6>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</footer>

{% schema %}
{
  "name": "Footer-custom",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Column Title",
          "label": "Column Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Subscribe to Our Newsletter"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Get exclusive updates and offers."
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo",
      "info": "Upload your footer logo here."
    }
  ],
  "presets": [
    {
      "name": "Custom Footer"
    }
  ]
}
{% endschema %}
