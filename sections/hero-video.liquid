<div class="videoBackground">
  {%- if section.blocks.size > 0 -%}
    {%- for block in section.blocks -%}
      {% if block.type == 'video' %}
        <div class="videoBox" style="background-image: url('{{ block.settings.video_image | img_url: 'master' }}');">
          {% if block.settings.video_url != blank %}
            <div class="fullscreen-video-wrap">
              <video class="video-js" loop autoplay muted playsinline>
                <source src="{{ block.settings.video_url }}" type="video/mp4">
                Your browser does not support HTML5 video.
              </video>
            </div>
          {% endif %}
          <div class="videoBoxInfo">
            {% if block.settings.text != blank %}
              {{ block.settings.text }}
            {% endif %}
            {% if block.settings.title != blank %}
              <h2 class="videoBoxInfoTitle">
                {{ block.settings.title | escape }}
              </h2>
            {% endif %}
            {% if block.settings.button_link != blank and block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="videoBoxInfoBtn button button--secondary">
                {{ block.settings.button_label | escape }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {%- endfor -%}
  {%- else -%}
    <div class="placeholderNoblocks">
      This section doesnâ€™t currently include any content. Add content to this section using the sidebar.
    </div>
  {%- endif -%}
</div>
 
<style>
 
.main-content .videoBackground {
  margin-top: -3.4375rem;
}
 
.videoBackground {
  position: relative;
}
 
.videoBackground .fullscreen-video-wrap {
  position: absolute;
  top: 0;
  left: 0;
  min-width: 100%;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
 
.videoBackground .fullscreen-video-wrap .video-js {
  position: absolute;
  top: 0;
  left: 0;
  min-height: 100%;
  min-width: 100%;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
 
.videoBackground .fullscreen-video-wrap video {
  min-height: 100%;
  min-width: 100%;
  object-fit: cover;
}
 
.videoBackground .videoBox {
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  flex-direction: column;
  padding: 6.25rem 1.25rem 5rem;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 31.25rem;
  max-height: 50rem;
  height: calc(100vh - 4rem); 
  position: relative;
}
 
.videoBackground .videoBoxInfo { 
  z-index: 2; 
  margin-left: 3rem;
  text-align: left;
  max-width: 40.5rem;
}
 
.videoBackground .overlay {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: var(--color-blanco);
  z-index: 1;
}
 
.videoBackground .videoBoxInfoBtn {
  -moz-user-select: none;
  -ms-user-select: none;
  -webkit-user-select: none;
  user-select: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  display: inline-block;
  width: auto;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
}
 
.videoBackground .videoBoxInfoTitle{
  color: var(--color-blanco);
  margin-top: 0;
}
 
.videoBackground .videoBoxInfoDescription { 
  max-width: 31.25rem; 
  margin: 0 auto;
}
 
.videoBoxInfo p {
  color: var(--color-blanco);
  margin-bottom: 0;
  text-transform: uppercase;
}
 
.videoBackground .placeholderNoblocks {
  max-width: 31.25rem;
  margin: 0 auto;
}
 
    @media screen and (max-width: 767px) {
 
.main-content .videoBackground { 
  margin-top: -2.1875rem;
}
 
.videoBackground .fullscreen-video-wrap { 
  z-index: 3;
}
 
.videoBackground .videoBox { 
  min-height: calc(100vh - 4rem);
  height: 100%;
  position: relative;
  padding: 0;
}
 
.videoBackground .fullscreen-video-wrap {
  position: relative;
  min-height: 18.75rem
  z-index: -2;
}
 
.videoBackground .videoBoxInfo {
  padding: 0.125rem 1.25rem;
  width: 100%;
}
    }
@media screen and (max-width: 767px) {
    .videoBackground .videoBox {
        padding: 6.25rem 1.25rem 2rem !important;
    }
    .videoBackground .fullscreen-video-wrap {
        position: absolute !important;
        z-index: 1 !important;
    }
    .videoBackground .videoBoxInfo {
        padding: 0.625rem !important;
    }

    .videoBackground .videoBoxInfo, .videoBackground .imageBoxInfo { 
        margin-left: auto;
    }
}
</style>
 
 
{% schema %}
{
  "name": "Video Background",
  "class": "videoBackground",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL"
        },
        {
          "type": "image_picker",
          "id": "video_image",
          "label": "Cover image (used as a placeholder)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Celebrate the New Year with a gift exclusive to this drop."
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>drop_01: lip dew</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero-Video",
      "blocks": [
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}