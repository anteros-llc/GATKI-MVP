<section class="custom-slideshow">
  <div class="carousel" data-flickity='{ "contain": true, "wrapAround": true, "pageDots": false, "prevNextButtons": true }'>
    {%- for block in section.blocks -%}
      {%- if block.type == 'slide' -%}
        <div class="carousel-cell">
          <div class="carousel-content-wrapper">
            <!-- Image -->
            <div class="carousel-image">
              <img 
                src="{{ block.settings.image | img_url: '800x' }}" 
                alt="{{ block.settings.alt_text | escape }}">
            </div>

            <!-- Text Content -->
            <div class="carousel-text">
              <h3>{{ block.settings.slide_heading }}</h3>
              <p>{{ block.settings.slide_text }}</p>
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>

<style>
  /* Container for the carousel */
  .custom-slideshow .carousel {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Carousel cells */
  .custom-slideshow .carousel-cell {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 20px;
  }

  /* Image styles */
  .custom-slideshow .carousel-image img {
    max-width: 50%;
    max-height: 70vh;
    object-fit: contain;
    display: block;
  }

  /* Text content */
  .custom-slideshow .carousel-text {
    max-width: 40%;
    padding-left: 20px;
  }

  .custom-slideshow .carousel-text h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .custom-slideshow .carousel-text p {
    font-size: 1rem;
    color: #555;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var elem = document.querySelector('.custom-slideshow .carousel');
    var flkty = new Flickity(elem, {
      contain: true,
      wrapAround: true,
      pageDots: false,
      prevNextButtons: true,
    });
  });
</script>

{% schema %}
{
  "name": "Custom Slideshow",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Slide image"
        },
        {
          "type": "text",
          "id": "slide_heading",
          "label": "Heading",
          "default": "Slide Heading"
        },
        {
          "type": "textarea",
          "id": "slide_text",
          "label": "Text Content",
          "default": "This is the description for the slide. You can customize this text."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Slideshow",
    }
  ]
}
{% endschema %}
