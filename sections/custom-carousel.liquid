<section class="custom-carousel">
  <div class="carousel" data-flickity='{ "contain": true, "wrapAround": true, "pageDots": false, "prevNextButtons": true }'>
    {%- for block in section.blocks -%}
      {%- if block.type == 'slide' -%}
        <div class="carousel-cell">
          <img 
            src="{{ block.settings.image | img_url: '800x' }}" 
            alt="{{ block.settings.alt_text | escape }}">
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>

  <div class="carousel-content">
    <h2>{{ section.settings.heading }}</h2>
    <ul class="features">
      {%- for block in section.blocks -%}
        {%- if block.type == 'text_item' -%}
          <li>{{ block.settings.text }}</li>
        {%- endif -%}
      {%- endfor -%}
    </ul>
  </div>
</section>

<style>
  /* Add your CSS here, reusing the CSS shared earlier */
  .custom-carousel {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
}

.carousel {
  flex: 1;
  max-width: 60%;
  overflow: hidden;
}

.carousel img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

.carousel-content {
  flex: 1;
  padding-left: 2rem;
  text-align: left;
}

.carousel-content h2 {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 1rem;
  color: #5a4033; /* Adjust color to match design */
}

.carousel-content .features {
  list-style: none;
  padding: 0;
  margin: 0;
}

.carousel-content .features li {
  font-size: 1rem;
  color: #5a4033; /* Adjust color to match design */
  margin-bottom: 0.5rem;
  position: relative;
}

.carousel-content .features li:before {
  content: "+";
  font-size: 1rem;
  color: #d37a00; /* Adjust to match accent color */
  margin-right: 0.5rem;
}

</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var elem = document.querySelector('.custom-carousel .carousel');
    var flkty = new Flickity(elem, {
      contain: true,
      wrapAround: true,
      pageDots: false,
      prevNextButtons: true,
    });
  });
</script>

{% schema %}
{
  "name": "Custom Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The touch of softness."
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Slide image"
        }
      ]
    },
    {
      "type": "text_item",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Carousel",
    }
  ]
}
{% endschema %}
