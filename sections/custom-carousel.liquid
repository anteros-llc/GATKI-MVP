{% comment %} {{ 'section-image-banner.css' | asset_url | stylesheet_tag }} {% endcomment %}

{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
<slideshow-component
  class="slider-mobile-gutter"
  role="region"
  aria-roledescription="carousel"
  aria-label="Slideshow"
>
  <div class="slideshow banner grid grid--1-col slider slider--everywhere" id="Slider-{{ section.id }}" aria-live="polite" aria-atomic="true">
    {%- for block in section.blocks -%}
      <div
        class="slideshow__slide grid__item grid--2-col slider__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        role="group"
        aria-roledescription="slide"
        aria-label="{{ forloop.index }} of {{ forloop.length }}"
      >
        <!-- Left Column: Image -->
        <div class="slideshow__media slideshow__media--half">
          {%- if block.settings.image -%}
            {{
              block.settings.image
              | image_url: width: 1600
              | image_tag: alt: block.settings.heading
            }}
          {%- endif -%}
        </div>

        <!-- Right Column: Text -->
        <div class="slideshow__text-wrapper slideshow__text-wrapper--half">
          {%- if block.settings.heading != blank -%}
            <h2>
              {{ block.settings.heading }}
            </h2>
          {%- endif -%}
          <div class="bottom-slider">
      <div class="slider-wrapper">
  <div class="slider-label">GENTLENESS</div>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Gentleness slider">
</div>
<div class="slider-wrapper">
  <div class="slider-label">NOURISHMENT</div>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Nourishment slider">
</div>
<div class="slider-wrapper">
  <div class="slider-label">STAYING POWER</div>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_8.0.svg?v=1734398694" alt="Staying Power slider">
</div>  
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
 <!-- Navigation Buttons -->
  {%- if section.blocks.size > 1 -%}
    <div class="slideshow__controls slider-buttons">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        &larr;
      </button>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        &rarr;
      </button>
    </div>
  {%- endif -%}
</slideshow-component>
<style>

  /* Flex container for slides */
 #Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
.slider-mobile-gutter{
  background-color: var(--color-blanco); 
  color: var(--color-chenpi);
} 
  
.slider__slide {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: auto;
}

/* Image column */
.slideshow__media--half {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slideshow__media img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

/* Text column */
.slideshow__text-wrapper--half {
  flex: 1;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
  height: 100%;
}

.slideshow__text-wrapper--half h2 {
  color: var(--color-chenpi);
}

.slider-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.slider-label {
  flex: 1;
  text-align: left;
  padding-bottom: .3rem;
}

.svg-slider {
  margin-left: 20px; /* Moves the SVG further to the right */
  flex: 1; /* Takes more space than label */
  padding-bottom: .3rem;
}
  
/* Responsive Design */
@media (max-width: 749px) {
  .slider__slide {
    flex-direction: column;
    align-items: center;
  }

  .slideshow__media--half,
  .slideshow__text-wrapper--half {
    width: 100%;
  }

  .slideshow__text-wrapper--half {
    text-align: center;
    padding: 1rem;
  }
}

</style>

