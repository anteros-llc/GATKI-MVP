<div class="two-column-carousel">
  <!-- Main Heading -->
  <h2 class="carousel-main-heading">Gentle yet effective ingredients</h2>

  <slideshow-component
    class="slider-mobile-gutter"
    role="region"
    aria-roledescription="carousel"
    aria-label="Slideshow"
  >
    <div class="slideshow grid grid--1-col slider slider--everywhere" id="Slider-{{ section.id }}" aria-live="polite" aria-atomic="true">
      {%- for block in section.blocks -%}
        <div
          class="slideshow__slide grid__item grid--2-col slider__slide"
          id="Slide-{{ section.id }}-{{ forloop.index }}"
          role="group"
          aria-roledescription="slide"
          aria-label="{{ forloop.index }} of {{ forloop.length }}"
          style="{% if forloop.index != 1 %}display: none;{% endif %}" <!-- Ensures the first slide is visible -->
        >
          <!-- Left Column: Image -->
          <div class="slideshow__media slideshow__media--half">
            {%- if block.settings.image -%}
              {{
                block.settings.image
                | image_url: width: 1600
                | image_tag: alt: block.settings.heading
              }}
            {%- endif -%}
          </div>

          <!-- Right Column: Text -->
          <div class="slideshow__text-wrapper slideshow__text-wrapper--half">
            <!-- Ingredient Text -->
            <div class="ingredient">
              <span class="ingredient-number">{{ forloop.index | prepend: '0' }}</span>
              <h6 class="ingredient-heading">{{ block.settings.heading }}</h6>
              <p class="ingredient-description">{{ block.settings.description }}</p>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>

    <!-- Number Navigation -->
    <div class="slideshow__numbers">
      {%- for block in section.blocks -%}
        <button
          type="button"
          class="slideshow__number {% if forloop.first %}active{% endif %}"
          data-slide="{{ forloop.index }}"
          aria-label="Go to slide {{ forloop.index }}"
        >
          {{ forloop.index | prepend: '0' }}
        </button>
      {%- endfor -%}
    </div>
  </slideshow-component>
</div>




<style>
 /* Namespace wrapper */
.two-column-carousel .slider__slide {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

/* Image Column */
.two-column-carousel .slideshow__media--half {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.two-column-carousel .slideshow__media img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

/* Text Column */
.two-column-carousel .slideshow__text-wrapper--half {
  flex: 1;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
}

.two-column-carousel .slideshow__heading {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: #333;
}

.two-column-carousel .slideshow__description {
  margin-bottom: 1rem;
  color: #666;
}

/* Number Navigation */
/* Main Heading Styling */
.two-column-carousel .carousel-main-heading {
  font-size: 2.5rem;
  font-weight: 400;
  text-align: center;
  margin-bottom: 1rem;
  color: var(--color-primary);
}

/* Ingredient Text Styling */
.two-column-carousel .ingredient {
  margin-bottom: 1rem;
  display: flex;
  align-items: flex-start;
}

.two-column-carousel .ingredient-number {
  font-size: 1rem;
  font-weight: bold;
  color: var(--color-primary);
  margin-right: 0.5rem;
}

.two-column-carousel .ingredient-heading {
  font-size: 1.2rem;
  font-weight: bold;
  color: var(--color-primary);
}

.two-column-carousel .ingredient-description {
  font-size: 1rem;
  color: var(--color-text);
  margin-top: 0.5rem;
}


/* Responsive */
@media (max-width: 749px) {
  .two-column-carousel .slider__slide {
    flex-direction: column;
    align-items: center;
  }

  .two-column-carousel .slideshow__media--half,
  .two-column-carousel .slideshow__text-wrapper--half {
    width: 100%;
    text-align: center;
  }
}
</style>
<script>
document.addEventListener("DOMContentLoaded", function () {
  const carousel = document.querySelector(".two-column-carousel");

  if (!carousel) return;

  const slides = carousel.querySelectorAll(".slideshow__slide");
  const buttons = carousel.querySelectorAll(".slideshow__number");

  buttons.forEach((button) => {
    button.addEventListener("click", function () {
      const targetId = this.getAttribute("data-slide");
      const targetSlide = carousel.querySelector(`#${targetId}`);

      // Hide all slides
      slides.forEach((slide) => {
        slide.style.display = "none";
      });

      // Show the target slide
      if (targetSlide) {
        targetSlide.style.display = "flex";
      }

      // Update active button states
      buttons.forEach((btn) => btn.classList.remove("active"));
      this.classList.add("active");
    });
  });
});
</script>

{% schema %}
{
  "name": "Carousel with Two Columns",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "custom_id",
          "label": "Unique Slide ID",
          "default": "slide-1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two-Column Carousel"
    }
  ]
}
{% endschema %}


