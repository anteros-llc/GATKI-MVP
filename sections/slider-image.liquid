<div class="two-column-carousel">
  <slideshow-component
    class="slider-mobile-gutter"
    role="region"
    aria-roledescription="carousel"
    aria-label="Two-Column Carousel"
  >
    <h2>Gentle yet effective ingredients.</h2>
    <div class="slideshow grid grid--1-col slider slider--everywhere" id="Slider-{{ section.id }}" aria-live="polite" aria-atomic="true">
      {%- for block in section.blocks -%}
        <div
          class="slideshow__slide two-column-slide grid__item grid--2-col slider__slide"
          id="{{ block.settings.custom_id }}"
          role="group"
          aria-roledescription="slide"
          aria-label="{{ block.settings.heading }}"
          {% if forloop.index == 1 %}style="display: flex;"{% else %}style="display: none;"{% endif %}
        >
          <!-- Left Column: Image -->
          <div class="slideshow__media slideshow__media--half">
            {%- if block.settings.image -%}
              {{
                block.settings.image
                | image_url: width: 1600
                | image_tag: alt: block.settings.heading
              }}
            {%- endif -%}
          </div>

          <!-- Right Column: Text -->
          <div class="slideshow__text-wrapper slideshow__text-wrapper--half">
            {%- if block.settings.heading != blank -%}
              <h2 class="slideshow__heading">{{ block.settings.heading }}</h2>
            {%- endif -%}
            <p class="slideshow__description">{{ block.settings.description }}</p>
          </div>
        </div>
      {%- endfor -%}
    </div>

    <!-- Number Navigation -->
    <div class="slideshow__numbers">
      {%- for block in section.blocks -%}
        <button
          type="button"
          class="slideshow__number {% if forloop.index == 1 %}active{% endif %}"
          data-slide="{{ block.settings.custom_id }}"
          aria-label="Go to {{ block.settings.heading }}"
        >
          {{ forloop.index | prepend: '0' }}
        </button>
      {%- endfor -%}
    </div>
  </slideshow-component>
</div>


<style>
/* Namespace wrapper */
.two-column-carousel .slider__slide {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

/* Image Column */
.two-column-carousel .slideshow__media--half {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.two-column-carousel .slideshow__media img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

/* Text Column */
.two-column-carousel .slideshow__text-wrapper--half {
  flex: 1;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
}

.two-column-carousel .slideshow__heading {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: #333;
}

.two-column-carousel .slideshow__description {
  margin-bottom: 1rem;
}

/* Number Navigation */
.two-column-carousel .slideshow {
  position: relative; /* To position numbers relative to the container */
}
 
.two-column-carousel .slideshow__numbers {
  display: flex;
  justify-content: center;
  margin-top: -5rem;
  position: absolute;
  left: -30%;
  right: 0;
  width: 100%;
}

.two-column-carousel .slideshow__number {
  font-family: var(--font-body-family);
  background: var(--color-blanco);
  border: 1px solid var(--color-blanco);
  border-radius: 50%;
  width: 50px;
  height: 50px;
  margin: 0 0.5rem;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--color-chenpi);
  font-weight: 400;
  transition: all 0.3s ease;
}

.two-column-carousel .slideshow__number.active {
  background-color: var(--color-chenpi);
  color: var(--color-blanco);
  border-color: var(--color-chenpi);
}

/* Responsive */
@media (max-width: 749px) {
  .two-column-carousel .slider__slide {
    flex-direction: column;
    align-items: center;
  }

  .two-column-carousel .slideshow__media--half,
  .two-column-carousel .slideshow__text-wrapper--half {
    width: 100%;
    text-align: center;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const carousel = document.querySelector(".two-column-carousel");

  if (!carousel) return;

  const slides = carousel.querySelectorAll(".slideshow__slide");
  const buttons = carousel.querySelectorAll(".slideshow__number");

  buttons.forEach((button) => {
    button.addEventListener("click", function () {
      const targetId = this.getAttribute("data-slide");
      const targetSlide = carousel.querySelector(`#${targetId}`);

      // Hide all slides
      slides.forEach((slide) => {
        slide.style.display = "none";
      });

      // Show the target slide
      if (targetSlide) {
        targetSlide.style.display = "flex";
      }

      // Update active button states
      buttons.forEach((btn) => btn.classList.remove("active"));
      this.classList.add("active");
    });
  });
});
</script>

{% schema %}
{
  "name": "Carousel with Two Columns",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "custom_id",
          "label": "Unique Slide ID",
          "default": "slide-1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two-Column Carousel"
    }
  ]
}
{% endschema %}


