<div class="slideshow banner grid grid--1-col slider slider--everywhere" id="Slider-{{ section.id }}">
  {%- for block in section.blocks -%}
    <div
      class="slideshow__slide grid__item grid--2-col slider__slide {% if forloop.first %}active{% endif %}"
      id="Slide-{{ section.id }}-{{ forloop.index }}"
    >
      <!-- Left Column: Image -->
      <div class="slideshow__media banner__media slideshow__media--half">
        {%- if block.settings.image -%}
          {{
            block.settings.image
            | image_url: width: 1600
            | image_tag: alt: block.settings.heading
          }}
        {%- endif -%}
      </div>
      <!-- Right Column: Text -->
      <div class="slideshow__text-wrapper slideshow__text-wrapper--half">
        {%- if block.settings.heading != blank -%}
          <h2 class="slideshow__heading">{{ block.settings.heading }}</h2>
        {%- endif -%}
        <p class="slideshow__description">{{ block.settings.description }}</p>
      </div>
    </div>
  {%- endfor -%}
</div>

<!-- Number Navigation -->
<div class="slideshow__numbers">
  {%- for block in section.blocks -%}
    <button
      type="button"
      class="slideshow__number {% if forloop.first %}active{% endif %}"
      data-slide="{{ forloop.index0 }}"
    >
      {{ forloop.index | prepend: '0' }}
    </button>
  {%- endfor -%}
</div>

<style>
  /* Layout for the slide */
.slider__slide {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

/* Image Column */
.slideshow__media--half {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slideshow__media img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

/* Text Column */
.slideshow__text-wrapper--half {
  flex: 1;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
}

.slideshow__heading {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: #333;
}

.slideshow__description {
  margin-bottom: 1rem;
  color: #666;
}

.slideshow__list {
  list-style: none;
  padding: 0;
}

.slideshow__list-item {
  margin-bottom: 0.5rem;
}

/* Number Navigation */
.slideshow__numbers {
  display: flex;
  justify-content: center;
  margin-top: 1rem;
}

/* .slideshow__slide {
  display: none;
} */

.slideshow__slide.active {
  display: flex;
}

.slideshow__number {
  background: none;
  border: 1px solid #ccc;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  margin: 0 0.5rem;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1rem;
  cursor: pointer;
  color: #666;
  font-weight: bold;
  transition: all 0.3s ease;
}

.slideshow__number.active {
  background-color: #666;
  color: #fff;
  border-color: #666;
}


/* Responsive */
@media (max-width: 749px) {
  .slider__slide {
    flex-direction: column;
    align-items: center;
  }

  .slideshow__media--half,
  .slideshow__text-wrapper--half {
    width: 100%;
    text-align: center;
  }
}
</style>
<script>
document.addEventListener("DOMContentLoaded", function () {
  const numbers = document.querySelectorAll(".slideshow__number");

  numbers.forEach((button) => {
    button.addEventListener("click", function () {
      const targetSlideId = this.getAttribute("data-slide");
      const targetSlide = document.getElementById(targetSlideId);

      // Hide all slides
      document.querySelectorAll(".slideshow__slide").forEach((slide) => {
        slide.style.display = "none";
      });

      // Show the target slide
      if (targetSlide) {
        targetSlide.style.display = "flex";
      }

      // Update button active states
      numbers.forEach((btn) => btn.classList.remove("active"));
      this.classList.add("active");
    });
  });
});
</script>
{% schema %}
{
  "name": "Carousel with Two Columns",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Two-Column Carousel",
    }
  ]
}
{% endschema %}


