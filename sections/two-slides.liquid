<style>
  .carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .carousel-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }
  .carousel-slide {
    scroll-snap-align: start;
    flex-shrink: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
  }
  .carousel-image {
    flex: 1;
    max-width: 50%;
  }
  .carousel-content {
    flex: 1;
    text-align: left;
  }
  .carousel-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
  }
  .carousel-buttons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .carousel-button {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }
  .carousel::-webkit-scrollbar {
    display: none;
  }
  
</style>

<div class="carousel">
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide" id="slide-{{ forloop.index }}">
        <img class="carousel-image" src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.heading }}">
        <div class="carousel-content">
          <div class="carousel-header">
            <h2>{{ block.settings.heading }}</h2>
            <div class="carousel-buttons">
              {% if forloop.index > 1 %}
                <a href="#slide-{{ forloop.index | minus: 1 }}" class="carousel-button">&larr;</a>
              {% endif %}
              {% if forloop.index < section.blocks.size %}
                <a href="#slide-{{ forloop.index | plus: 1 }}" class="carousel-button">&rarr;</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "2UP Carousel",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "2UP Carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
