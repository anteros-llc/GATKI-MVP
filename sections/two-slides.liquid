<style>
  .carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .carousel-track {
    display: flex;
    width: 200%;
    transition: transform 0.5s ease-in-out;
  }
  .carousel-slide {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    /* flex-shrink: 0; */
  }
  .carousel-image {
    flex: 1;
    max-width: 50%;
  }
  .carousel-content {
    flex: 1;
    text-align: left;
  }
  .carousel-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
  }
  .carousel-buttons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .carousel-button {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }
  
  /* Hide radio inputs */
  .carousel input {
    display: none;
  }
  
  /* Slide transition */
  #slide1:checked ~ .carousel-track {
    transform: translateX(0);
  }
  #slide2:checked ~ .carousel-track {
    transform: translateX(-100%);
  }
  
  /* Labels as navigation */
  .carousel-nav {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
  }
  .carousel-nav label {
    cursor: pointer;
    font-size: 1.5rem;
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.5);
    color: white;
    border-radius: 50%;
  }
</style>

<div class="carousel">
  <input type="radio" name="carousel" id="slide1" checked>
  <input type="radio" name="carousel" id="slide2">
  
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide">
        <img class="carousel-image" src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.heading }}">
        <div class="carousel-content">
          <div class="carousel-header">
            <h2>{{ block.settings.heading }}</h2>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
  <div class="carousel-nav">
    <label for="slide1">&larr;</label>
    <label for="slide2">&rarr;</label>
  </div>
</div>

{% schema %}
{
  "name": "2UP Slides",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "2UP Slides",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
