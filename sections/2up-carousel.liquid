<style>

  /* Flex container for slides */
#Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
.slider-mobile-gutter{
  background-color: var(--color-blanco); 
  color: var(--color-chenpi);
} 

.custom-slider-ingredients {
  position: relative;
}

.slider-buttons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
}
  
.slider__custom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: auto;
}

/* Image column */
.slideshow__media--half {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slideshow__media img {
  width: 100%;
  height: auto;
  object-fit: contain;
  max-width: 720px;
}

/* Text column */
.slideshow__text-wrapper--half {
  flex: 1;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
  height: 100%;
}

.slideshow__text-wrapper--half h2 {
  color: var(--color-chenpi);
}

.slider-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.slider-label {
  flex: 1;
  text-align: left;
  padding-bottom: .3rem;
}

.svg-slider {
  margin-left: 20px; /* Moves the SVG further to the right */
  flex: 1; /* Takes more space than label */
  padding-bottom: .3rem;
}

.slider-wrapper h6, .silder-wrapper span{
  font-size: 1rem;
  line-height: 1.1rem;
}

.slider-wrapper h6{
  font-weight: 700;
}

.slider-wrapper span{
  font-weight: 400;
}
  
/* Responsive Design */
@media (max-width: 749px) {
  .slider__slide {
    flex-direction: column;
    align-items: center;
  }

  .slideshow__media--half,
  .slideshow__text-wrapper--half {
    width: 100%;
  }

  .slideshow__text-wrapper--half {
    text-align: center;
    padding: 1rem;
  }

  .svg-slider {
    width: 60%;
  }

  .slider-buttons{
    top:32%;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.querySelector('.carousel-track');
    const slides = Array.from(document.querySelectorAll('.carousel-slide'));
    const prevButtons = document.querySelectorAll('.carousel-button.prev');
    const nextButtons = document.querySelectorAll('.carousel-button.next');
    let currentIndex = 0;

    function updateSliderPosition() {
      track.style.transition = 'transform 0.5s ease-in-out';
      track.style.transform = `translateX(-${currentIndex * 100}%)`;
      prevButtons.forEach(btn => btn.style.display = currentIndex === 0 ? 'none' : 'block');
      nextButtons.forEach(btn => btn.style.display = currentIndex === slides.length - 1 ? 'none' : 'block');
    }

    prevButtons.forEach(btn => btn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateSliderPosition();
      }
    }));

    nextButtons.forEach(btn => btn.addEventListener('click', () => {
      if (currentIndex < slides.length - 1) {
        currentIndex++;
        updateSliderPosition();
      }
    }));

    updateSliderPosition();
  });
</script>

