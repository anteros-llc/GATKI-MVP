<style>
  .2up-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: var(--color-blanco); 
    color: var(--color-chenpi);
  }
  .carousel-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    transition: transform 0.5s ease-in-out;
  }
  .carousel-slide {
    scroll-snap-align: start;
    flex-shrink: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .carousel-image {
    flex: 1;
    max-width: 50%;
  }
  .carousel-content {
    flex: 1;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding: 0 1.5rem 1rem;
  }
  .carousel-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
    color: var(--color-chenpi);
  }
  .carousel-buttons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .carousel-button {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    text-decoration: none;
    color: var(--color-chenpi);
  }
  .carousel::-webkit-scrollbar {
    display: none;
  }

.slider-wrapper-slide1, .slider-wrapper-slide2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--color-chenpi);
}

.slider-label {
  flex: 1;
  text-align: left;
  padding-bottom: .3rem;
}

.svg-slider {
  margin-left: 20px; /* Moves the SVG further to the right */
  flex: 1; /* Takes more space than label */
  padding-bottom: .3rem;
}

.slider-wrapper-slide2 h6, .slider-wrapper-slide1 h6, .silder-wrapper-slide2 span{
  font-size: 1rem;
  line-height: 1.1rem;
}

.slider-wrapper-slide2 h6, .slider-wrapper-slide1 h6{
  font-weight: 700;
}

.slider-wrapper-slide2 span{
  font-weight: 400;
}

  @media (max-width: 768px) {
    .carousel-slide {
      flex-direction: column;
      text-align: left;
    }
    .carousel-image {
      max-width: 100%;
    }
    .carousel-content {
      text-align: left;
    }
    .slider-wrapper-slide1{
      display: unset;
    }
    .slider-wrapper-slide2{
      gap: 0.75rem;
      padding-bottom: 2px;
    }
    .svg-slider{
      margin-left:0;
    }
    .carousel-button{
      padding: 0;
    }
    .slider-wrapper-slide1 h6, .slider-wrapper-slide2 h6{
      font-size: 0.875rem;
      line-height: 0.9625rem;
    }
    .carousel-header{
      padding-bottom: 40%;
    }
  } 
</style>

<div class="2up-carousel">
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide" id="slide-{{ forloop.index }}">
        <img class="carousel-image" src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.heading }}">
        <div class="carousel-content">
          <div class="carousel-header">
            <h2>{{ block.settings.heading }}</h2>
             <div class="carousel-buttons">
              {% if forloop.index > 1 %}
                <button class="carousel-button prev" data-target="{{ forloop.index | minus: 1 }}">&larr;</button>
              {% endif %}
              {% if forloop.index < section.blocks.size %}
                <button class="carousel-button next" data-target="{{ forloop.index | plus: 1 }}">&rarr;</button>
              {% endif %}
            </div>
          </div>
            {% if block.settings.slide_type == 'slider' %}
          <div class="bottom-slider">
      <div class="slider-wrapper-slide1">
  <h6 class="slider-label">GENTLENESS</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Gentleness slider">
</div>
<div class="slider-wrapper-slide1">
  <h6 class="slider-label">NOURISHMENT</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Nourishment slider">
</div>
<div class="slider-wrapper-slide1">
  <h6 class="slider-label">STAYING POWER</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_8.0.svg?v=1734398694" alt="Staying Power slider">
</div>  
          </div>
         {% elsif block.settings.slide_type == 'text' %}  
      <div class="text-content">
        <div class="slider-wrapper-slide2">
          <h6>HOW IT FEELS</h6>
          <span>Cushiony soft</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>HOW IT LOOKS</h6>
          <span>Clear with a natural sheen</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>HOW IT SMELLS</h6>
          <span>Fragrance-free</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>HOW IT TASTES</h6>
          <span>Flavor-free</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>BEST FOR</h6>
          <span>Suitable for all, especially sensitive lips</span>
        </div>
      </div>
            {% endif %}
        </div>
      </div>
    {%- endfor -%}
  </div>
        </div>

<script>
          document.addEventListener("DOMContentLoaded", function () {
  const carouselTrack = document.querySelector(".carousel-track");
  const slides = document.querySelectorAll(".carousel-slide");
  const nextButtons = document.querySelectorAll(".carousel-button.next");
  const prevButtons = document.querySelectorAll(".carousel-button.prev");

  function navigateToSlide(slideIndex) {
    if (slideIndex >= 1 && slideIndex <= slides.length) {
      const targetSlide = document.getElementById(`slide-${slideIndex}`);
      if (targetSlide) {
        carouselTrack.scrollTo({
          left: targetSlide.offsetLeft,
          behavior: "smooth",
        });
      }
    }
  }

  nextButtons.forEach((button) => {
    button.addEventListener("click", function () {
      navigateToSlide(parseInt(this.getAttribute("data-target")));
    });
  });

  prevButtons.forEach((button) => {
    button.addEventListener("click", function () {
      navigateToSlide(parseInt(this.getAttribute("data-target")));
    });
  });
});

</script>

