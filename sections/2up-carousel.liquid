<style>
  .2up-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: var(--color-blanco); 
    color: var(--color-chenpi);
  }

  .carousel-track {
    display: flex;
    width: 100%;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
    will-change: transform;
}

  .carousel-slide {
    scroll-snap-align: start;
    flex-shrink: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    opacity: 0;
    transition: opacity 0.4s ease-in-out;
}

  .carousel-slide.active {
    opacity: 1;
}

  .carousel-image {
    flex: 1;
    max-width: 50%;
  }
  .carousel-content {
    flex: 1;
    text-align: left;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 3%;
  }
  .carousel-header {
    color: var(--color-chenpi);
  }
  .carousel-header h2{
    margin-top: 0;
  }
  .carousel-buttons {
    display: flex;
    justify-content: end;
    align-items: flex-end;
    height: 100%;
  }
  .carousel-button {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    text-decoration: none;
    color: var(--color-chenpi);
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .slider-wrapper-slide1, .slider-wrapper-slide2 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-chenpi);
  }

  .slider-label {
    flex: 1;
    text-align: left;
    padding-bottom: .3rem;
  }

  .svg-slider {
    margin-left: 20px; /* Moves the SVG further to the right */
    flex: 1; /* Takes more space than label */
    padding-bottom: .3rem;
  }

  .slider-wrapper-slide2 h6, .slider-wrapper-slide1 h6, .silder-wrapper-slide2 span{
    font-size: 1rem;
    line-height: 1.1rem;
  }

  .slider-wrapper-slide2 h6, .slider-wrapper-slide1 h6{
    font-weight: 700;
  }

  .slider-wrapper-slide2 span{
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .carousel-slide {
      flex-direction: column;
      text-align: left;
    }
    .carousel-image {
      max-width: 100%;
      max-height: 50vh;
    }
    .carousel-header h2{
      font-size: 2rem;
    }
    .carousel-content {
      text-align: left;
      padding: 3% 0;
    }
    .slider-wrapper-slide1{
      display: unset;
    }
    .slider-wrapper-slide2{
      gap: 0.75rem;
      padding-bottom: 2px;
    }
    .svg-slider{
      margin-left:0;
    }
    .carousel-button{
      padding: 0;
    }
    .slider-wrapper-slide1 h6, .slider-wrapper-slide2 h6{
      font-size: 0.875rem;
      line-height: 0.9625rem;
    }
    .arrow-icon{
      margin-top: 3rem;
      width: 12px;
      height: 12px;
    }
    .slider-wrapper-slide2 span{
      font-size: 0.875rem;
    }
  } 
</style>

<div class="2up-carousel">
  <div class="carousel-track">
    {% for block in section.blocks %}
      <div class="carousel-slide" id="slide-{{ forloop.index }}">
        <img class="carousel-image" src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.heading }}">
        <div class="carousel-content">
          <div class="carousel-header">
            <h2>{{ block.settings.heading }}</h2>
          </div>
            {% if block.settings.slide_type == 'slider' %}
          <div class="bottom-slider">
      <div class="slider-wrapper-slide1">
  <h6 class="slider-label">GENTLENESS</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Gentleness slider">
</div>
<div class="slider-wrapper-slide1">
  <h6 class="slider-label">NOURISHMENT</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Nourishment slider">
</div>
<div class="slider-wrapper-slide1">
  <h6 class="slider-label">STAYING POWER</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_8.0.svg?v=1734398694" alt="Staying Power slider">
</div>  
          </div>
         {% elsif block.settings.slide_type == 'text' %}  
      <div class="text-content">
        <div class="slider-wrapper-slide2">
          <h6>HOW IT FEELS</h6>
          <span>Cushiony soft</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>HOW IT LOOKS</h6>
          <span>Clear with a natural sheen</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>HOW IT SMELLS</h6>
          <span>Fragrance-free</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>HOW IT TASTES</h6>
          <span>Flavor-free</span>
        </div>
        <div class="slider-wrapper-slide2">
          <h6>BEST FOR</h6>
          <span>Suitable for all, especially sensitive lips</span>
        </div>
      </div>
            {% endif %}
   <div class="carousel-buttons">
              {% if forloop.index > 1 %}
                <button class="carousel-button prev" data-target="{{ forloop.index | minus: 1 }}">
    <svg width="24" height="24" viewBox="0 0 13 13" fill="#91693C" xmlns="http://www.w3.org/2000/svg" class="arrow-icon">
<path d="M0.839844 6.55496L6.77028 0.834229L7.74419 1.73127L3.18767 6.1149H12.8398V7.55355L3.18767 7.53663L7.70941 11.9372L6.7355 12.8342L0.839844 7.07964V6.55496Z" fill="#91693C"/>
</svg>
                </button>
              {% endif %}
              {% if forloop.index < section.blocks.size %}
                <button class="carousel-button next" data-target="{{ forloop.index | plus: 1 }}">
                  <svg width="24" height="24" viewBox="0 0 12 13" fill="#91693C" xmlns="http://www.w3.org/2000/svg" class="arrow-icon"> 
<path d="M12 6.37918V6.90386L6.10435 12.6584L5.13043 11.7614L9.65217 7.36085L0 7.37777V5.93912H9.65217L5.09565 1.55548L6.06957 0.658447L12 6.37918Z" fill="#91693C"/>
</svg>  
                </button>
              {% endif %}
            </div>  
        </div>
      </div>
    {%- endfor -%}
  </div>
        </div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const carouselTrack = document.querySelector(".carousel-track");
  const slides = document.querySelectorAll(".carousel-slide");
  const nextButtons = document.querySelectorAll(".carousel-button.next");
  const prevButtons = document.querySelectorAll(".carousel-button.prev");

  let currentIndex = 0;
  const totalSlides = slides.length;
  let startX = 0;
  let isDragging = false;
  let deltaX = 0;

  function updateCarousel() {
    // Move slides smoothly
    carouselTrack.style.transform = `translateX(${-currentIndex * 100}%)`;

    // Fade effect
    slides.forEach((slide, index) => {
      slide.classList.toggle("active", index === currentIndex);
    });
  }

  function navigateToSlide(index) {
    if (index >= 0 && index < totalSlides) {
      currentIndex = index;
      updateCarousel();
    }
  }

  // Buttons Navigation
  nextButtons.forEach((button) => {
    button.addEventListener("click", () => navigateToSlide(currentIndex + 1));
  });

  prevButtons.forEach((button) => {
    button.addEventListener("click", () => navigateToSlide(currentIndex - 1));
  });

  // Touch & Swipe Events
  carouselTrack.addEventListener("touchstart", (e) => {
    startX = e.touches[0].clientX;
    isDragging = true;
  });

  carouselTrack.addEventListener("touchmove", (e) => {
    if (!isDragging) return;
    deltaX = startX - e.touches[0].clientX;
  });

  carouselTrack.addEventListener("touchend", () => {
    isDragging = false;
    if (deltaX > 50) navigateToSlide(currentIndex + 1); // Swipe left
    if (deltaX < -50) navigateToSlide(currentIndex - 1); // Swipe right
  });

  // Initialize first slide as active
  updateCarousel();
});


</script>

