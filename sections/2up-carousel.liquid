        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        },
                {
  "type": "select",
  "id": "slide_type",
  "label": "Slide Type",
  "options": [
    {
      "value": "slider",
      "label": "Slider"
    },
    {
      "value": "text",
      "label": "Text"
    }
  ],
  "default": "slider"
},
      ],
      
    }
  ],
  "presets": [
    {
      "name": "2UP Carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}