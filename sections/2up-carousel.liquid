<slideshow-component
  class="slider-mobile-gutter custom-slider-ingredients"
  role="region"
  aria-roledescription="carousel"
  aria-label="Slideshow"
>
  <div class="slideshow banner slider slider--everywhere custom-slider" id="Slider-{{ section.id }}" aria-live="polite" aria-atomic="true">
    {%- for block in section.blocks -%}
      <div
        class="slideshow__slide slider__slide slider__custom"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        role="group"
        aria-roledescription="slide"
        aria-label="{{ forloop.index }} of {{ forloop.length }}"
      >
        <!-- Left Column: Image -->
        <div class="slideshow__media slideshow__media--half">
          {%- if block.settings.image -%}
            {{
              block.settings.image
              | image_url: width: 1600
              | image_tag: alt: block.settings.heading
            }}
          {%- endif -%}
        </div>

        <!-- Right Column: Text -->
        <div class="slideshow__text-wrapper slideshow__text-wrapper--half">
            {%- if block.settings.heading != blank -%}
             <div class="carousel-header">
            <h2>{{ block.settings.heading }}</h2>
            <div class="carousel-buttons">
              <button class="carousel-button prev" aria-label="Previous slide">&larr;</button>
              <button class="carousel-button next" aria-label="Next slide">&rarr;</button>
            </div>
          </div>
          {%- endif -%}

            {% if block.settings.slide_type == 'slider' %}
          <div class="bottom-slider">
      <div class="slider-wrapper">
  <h6 class="slider-label">GENTLENESS</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Gentleness slider">
</div>
<div class="slider-wrapper">
  <h6 class="slider-label">NOURISHMENT</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_7.0.svg?v=1734398693" alt="Nourishment slider">
</div>
<div class="slider-wrapper">
  <h6 class="slider-label">STAYING POWER</h6>
  <img class="svg-slider" src="https://cdn.shopify.com/s/files/1/0887/0500/7936/files/Range_8.0.svg?v=1734398694" alt="Staying Power slider">
</div>  
          </div>
         {% elsif block.settings.slide_type == 'text' %}  
      <div class="text-content">
        <div class="slider-wrapper">
          <h6>HOW IT FEELS</h6>
          <span>Cushiony soft</span>
        </div>
        <div class="slider-wrapper">
