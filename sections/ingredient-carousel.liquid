<div class="ingredient-carousel">
  <div class="ingredient-container">
    <!-- Left Column: Image -->
    <div class="ingredient-image">
      <img id="ingredient-main-image" src="{{ section.blocks[0].settings.image | image_url: width: 1600 }}" alt="Ingredient Image">
      <div class="ingredient-numbers">
        {% for block in section.blocks %}
          <button class="ingredient-number" data-slide="{{ forloop.index0 }}">{{ block.settings.number }}</button>
        {% endfor %}
      </div>
    </div>

    <!-- Right Column: Ingredients List -->
    <div class="ingredient-list">
      {% for block in section.blocks %}
      <div class="ingredient-item" data-slide="{{ forloop.index0 }}">
        <div class="ingredient-title">
          <h6>{{ block.settings.title }}</h6>
        </div>
        <p class="ingredient-description">{{ block.settings.description }}</p>
        <div class="ingredient-hidden-text">
          {% if block.settings.percentage %}
            <div class="percentage">
              <h2>{{ block.settings.percentage }}</h2>
            </div>
          {% endif %}
          <div class="bullet-points">
            <ul>
              {% for i in (1..3) %}
                {% assign heading = "bullet_point_" | append: i | append: "_heading" %}
                {% assign text = "bullet_point_" | append: i | append: "_text" %}
                {% if block.settings[heading] and block.settings[text] %}
                  <li>
                    <h6>{{ block.settings[heading] }}</h6>
                    <p>{{ block.settings[text] }}</p>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>


<style>
/* General Styling */
.ingredient-carousel {
  text-align: center;
  padding-bottom: 2rem;
  position: relative;
}

/* Title */
.ingredient-carousel-title {
  margin-bottom: 1.5rem;
}

/* Image Slider */
.ingredient-slider {
  max-width: 600px;
  margin: 0 auto;
  position: relative;
}

.ingredient-slide {
  position: relative;
  text-align: center;
}

.ingredient-image {
  width: 100%;
  border-radius: 10px;
  display: block;
}

/* Number Buttons on Image */
.ingredient-numbers {
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 0.5rem;
}

.ingredient-number-btn {
  background: var(--color-blanco);
  border: 1px solid var(--color-blanco);
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.2rem;
  cursor: pointer;
  color: var(--color-chenpi);
  font-weight: 400;
  transition: all 0.3s ease;
}

.ingredient-number-btn.active {
  background-color: var(--color-chenpi);
  color: var(--color-blanco);
  border-color: var(--color-chenpi);
}

.ingredient-number-btn:hover {
  background-color: var(--color-chenpi);
  color: var(--color-blanco);
}

/* Ingredients List */
.ingredient-list {
  max-width: 600px;
  margin: 2rem auto 0;
}

.ingredient-item {
  border-bottom: 1px solid #ddd;
  padding: 1rem 0;
  text-align: left;
}

/* Hidden Details */
.ingredient-hidden-text {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.5s ease-out, opacity 0.3s ease-out;
}

.ingredient-hidden-text.expanded {
  max-height: 500px;
  opacity: 1;
}

/* Bullet Points */
.bullet-points ul {
  padding: 0;
  margin: 0;
  list-style: none;
}

.bullet-points li {
  margin-bottom: 0.5rem;
}

.bullet-points h6 {
  font-weight: bold;
}

.percentage h2 {
  color: var(--color-mandarin);
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const ingredientCarousel = document.querySelector("#ingredient-carousel");

  if (!ingredientCarousel) return;

  var ingredientSplide = new Splide(".ingredient-slider", {
    type: "fade",
    perPage: 1,
    pagination: false,
    arrows: false,
    speed: 800,
    easing: "cubic-bezier(0.25, 1, 0.5, 1)"
  }).mount();

  const buttons = ingredientCarousel.querySelectorAll(".ingredient-number-btn");
  const ingredientItems = ingredientCarousel.querySelectorAll(".ingredient-item");
  const ingredientDetails = ingredientCarousel.querySelectorAll(".ingredient-hidden-text");

  function hideAllIngredients() {
    ingredientItems.forEach((item) => {
      item.style.display = "none"; // Hide all ingredients
    });

    ingredientDetails.forEach((detail) => {
      detail.style.maxHeight = "0px";
      detail.style.opacity = "0";
      detail.classList.remove("expanded");
    });
  }

  // âœ… Set default state: Show all ingredients but collapse details
  ingredientItems.forEach((item) => {
    item.style.display = "block"; // Initially visible
  });

  ingredientDetails.forEach((detail) => {
    detail.style.maxHeight = "0px";
    detail.style.opacity = "0";
  });

  buttons.forEach((button, index) => {
    button.addEventListener("click", function () {
      const targetIndex = parseInt(this.getAttribute("data-slide"));

      hideAllIngredients(); // Hide everything first

      const targetItem = ingredientCarousel.querySelector(`.ingredient-item[data-ingredient-id="${targetIndex}"]`);
      if (targetItem) {
        targetItem.style.display = "block"; // Show only the selected ingredient
      }

      const targetDetail = ingredientCarousel.querySelector(`.ingredient-item[data-ingredient-id="${targetIndex}"] .ingredient-hidden-text`);
      if (targetDetail) {
        targetDetail.style.maxHeight = targetDetail.scrollHeight + "px";
        targetDetail.style.opacity = "1";
        targetDetail.classList.add("expanded");
      }

      ingredientSplide.go(targetIndex);

      buttons.forEach((btn) => btn.classList.remove("active"));
      this.classList.add("active");
    });
  });

  ingredientSplide.on("moved", function (newIndex) {
    hideAllIngredients(); // Hide everything first

    const newItem = ingredientItems[newIndex];
    if (newItem) {
      newItem.style.display = "block"; // Show only selected ingredient
    }

    const newDetail = ingredientDetails[newIndex];
    if (newDetail) {
      newDetail.style.maxHeight = newDetail.scrollHeight + "px";
      newDetail.style.opacity = "1";
      newDetail.classList.add("expanded");
    }

    buttons.forEach((btn) => btn.classList.remove("active"));
    buttons[newIndex].classList.add("active");
  });
});

</script>


