<div class="ingredient-carousel">
  <div class="ingredient-container">
    <!-- Left Column: Image -->
    <div class="ingredient-image">
      <img id="ingredient-main-image" src="{{ section.blocks[0].settings.image | image_url: width: 1600 }}" alt="Ingredient Image">
      <div class="ingredient-numbers">
        {% for block in section.blocks %}
          <button class="ingredient-number" data-slide="{{ forloop.index0 }}">{{ block.settings.number }}</button>
        {% endfor %}
      </div>
    </div>

    <!-- Right Column: Ingredients List -->
    <div class="ingredient-list">
      {% for block in section.blocks %}
      <div class="ingredient-item" data-slide="{{ forloop.index0 }}">
        <div class="ingredient-title">
          <h6>{{ block.settings.title }}</h6>
        </div>
        <p class="ingredient-description">{{ block.settings.description }}</p>
        <div class="ingredient-hidden-text">
          {% if block.settings.percentage %}
            <div class="percentage">
              <h2>{{ block.settings.percentage }}</h2>
            </div>
          {% endif %}
          <div class="bullet-points">
            <ul>
              {% for i in (1..3) %}
                {% assign heading = "bullet_point_" | append: i | append: "_heading" %}
                {% assign text = "bullet_point_" | append: i | append: "_text" %}
                {% if block.settings[heading] and block.settings[text] %}
                  <li>
                    <h6>{{ block.settings[heading] }}</h6>
                    <p>{{ block.settings[text] }}</p>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>


<style>
.ingredient-carousel {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

/* Image Column */
.ingredient-image {
  position: relative;
  flex: 1;
  max-width: 40%;
}

.ingredient-image img {
  width: 100%;
  border-radius: 10px;
}

.ingredient-numbers {
  position: absolute;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 1rem;
}

.ingredient-number {
  background: var(--color-blanco);
  border: 1px solid var(--color-blanco);
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--color-chenpi);
  transition: all 0.3s ease-in-out;
}

.ingredient-number.active {
  background: var(--color-chenpi);
  color: var(--color-blanco);
}

/* Ingredient List */
.ingredient-list {
  flex: 1;
  padding-left: 2rem;
  max-width: 60%;
}

.ingredient-item {
  cursor: pointer;
  margin-bottom: 1rem;
  transition: opacity 0.3s ease-in-out;
}

.ingredient-item h6 {
  font-size: 1.2rem;
  font-weight: 700;
}

.ingredient-hidden-text {
  display: none;
  opacity: 0;
  max-height: 0;
  transition: opacity 0.3s ease-in-out, max-height 0.3s ease-in-out;
}

.ingredient-item.active .ingredient-hidden-text {
  display: block;
  opacity: 1;
  max-height: 500px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const ingredientNumbers = document.querySelectorAll(".ingredient-number");
  const ingredientItems = document.querySelectorAll(".ingredient-item");
  const ingredientMainImage = document.getElementById("ingredient-main-image");

  // Initial state - No active numbers
  ingredientNumbers.forEach(num => num.classList.remove("active"));

  ingredientNumbers.forEach((number, index) => {
    number.addEventListener("click", function () {
      // Remove active class from all numbers & items
      ingredientNumbers.forEach(num => num.classList.remove("active"));
      ingredientItems.forEach(item => item.classList.remove("active"));

      // Add active class to clicked number & corresponding ingredient
      number.classList.add("active");
      ingredientItems[index].classList.add("active");

      // Change main image
      const newImage = ingredientItems[index].querySelector("img");
      if (newImage) {
        ingredientMainImage.src = newImage.src;
        ingredientMainImage.alt = newImage.alt;
      }
    });
  });
});


</script>


