<div class="ingredient-carousel">
  <div id="ingredient-slider" class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        {%- for ingredient in section.blocks -%}
          <li class="splide__slide">
            <div class="ingredient-image-container">
              <img src="{{ ingredient.settings.image | image_url: width: 1600 }}" alt="{{ ingredient.settings.title }}">
              <!-- Numbers Overlay -->
              <div class="ingredient-numbers">
                {%- for number in section.blocks -%}
                  <button type="button"
                    class="pagination-btn"
                    data-slide="{{ number.settings.slide_id }}"
                    aria-label="Go to {{ number.settings.title }}">
                    {{ number.settings.number }}
                  </button>
                {%- endfor -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>

  <!-- Ingredients List (Always Visible) -->
  <ul class="ingredients-list">
    {%- for ingredient in section.blocks -%}
      <li class="ingredient-item" data-ingredient-id="{{ ingredient.settings.slide_id }}">
        <div class="ingredient-header">
          <h6 class="ingredient-title">{{ ingredient.settings.title }}</h6>
          <span class="ingredient-number">{{ ingredient.settings.number }}</span>
        </div>
        <p class="ingredient-description">{{ ingredient.settings.description }}</p>

        <!-- Hidden Expanded Details -->
        <div class="ingredient-hidden-text">
          {% if ingredient.settings.percentage %}
            <div class="percentage">
              <h2>{{ ingredient.settings.percentage }}</h2>
            </div>
          {% endif %}
          <div class="bullet-points">
            <ul>
              {% for i in (1..3) %}
                {% assign heading_key = 'bullet_point_' | append: i | append: '_heading' %}
                {% assign text_key = 'bullet_point_' | append: i | append: '_text' %}
                {% if ingredient.settings[heading_key] and ingredient.settings[text_key] %}
                  <li>
                    <h6>{{ ingredient.settings[heading_key] }}</h6>
                    <p>{{ ingredient.settings[text_key] }}</p>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </li>
    {%- endfor -%}
  </ul>
</div>




