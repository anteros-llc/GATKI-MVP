<div class="ingredient-carousel">
  <div id="ingredient-slider" class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        {%- for ingredient in section.blocks -%}
          <li class="splide__slide">
            <div class="ingredient-image-container">
              <img src="{{ ingredient.settings.image | image_url: width: 1600 }}" alt="{{ ingredient.settings.title }}">
              <!-- Numbers Overlay -->
              <div class="ingredient-numbers">
                {%- for number in section.blocks -%}
                  <button type="button"
                    class="pagination-btn"
                    data-slide="{{ number.settings.slide_id }}"
                    aria-label="Go to {{ number.settings.title }}">
                    {{ number.settings.number }}
                  </button>
                {%- endfor -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>

  <!-- Ingredients List (Always Visible) -->
  <ul class="ingredients-list">
    {%- for ingredient in section.blocks -%}
      <li class="ingredient-item" data-ingredient-id="{{ ingredient.settings.slide_id }}">
        <div class="ingredient-header">
          <h6 class="ingredient-title">{{ ingredient.settings.title }}</h6>
          <span class="ingredient-number">{{ ingredient.settings.number }}</span>
        </div>
        <p class="ingredient-description">{{ ingredient.settings.description }}</p>

        <!-- Hidden Expanded Details -->
        <div class="ingredient-hidden-text">
          {% if ingredient.settings.percentage %}
            <div class="percentage">
              <h2>{{ ingredient.settings.percentage }}</h2>
            </div>
          {% endif %}
          <div class="bullet-points">
            <ul>
              {% for i in (1..3) %}
                {% assign heading_key = 'bullet_point_' | append: i | append: '_heading' %}
                {% assign text_key = 'bullet_point_' | append: i | append: '_text' %}
                {% if ingredient.settings[heading_key] and ingredient.settings[text_key] %}
                  <li>
                    <h6>{{ ingredient.settings[heading_key] }}</h6>
                    <p>{{ ingredient.settings[text_key] }}</p>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </li>
    {%- endfor -%}
  </ul>
</div>




<style>
.ingredient-carousel {
  text-align: center;
  padding-bottom: 2rem;
}

/* Container: Image + Text side by side */
.carousel-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 3rem;
  max-width: 1200px;
  margin: auto;
}

/* Left: Image Column */
.carousel-image-wrapper {
  flex: 1;
  position: relative;
}

.splide {
  max-width: 500px;
  margin: 0 auto;
}

.splide__slide img {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 1rem;
}

/* Numbers Overlay */
.image-container {
  position: relative;
}

.carousel-numbers {
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 1rem;
}

.pagination-btn {
  background: var(--color-blanco);
  border: 1px solid var(--color-chenpi);
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.2rem;
  cursor: pointer;
  color: var(--color-chenpi);
  font-weight: 400;
  transition: all 0.3s ease;
}

.pagination-btn.active {
  background-color: var(--color-chenpi);
  color: var(--color-blanco);
}

/* Right: Text Column */
.carousel-text {
  flex: 1;
  text-align: left;
}
/* Ingredient text container */
.ingredient-item {
  display: block; /* All are visible on load */
  max-height: 0; /* Collapsed by default */
  overflow: hidden;
  opacity: 1;
  transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out;
}

/* Expanded ingredient */
.ingredient-item.expanded {
  max-height: 500px; /* Adjust to fit content */
  opacity: 1;
}

/* Number buttons default (not active) */
.pagination-btn {
  opacity: 0.6;
  transition: opacity 0.2s ease-in-out;
}

/* Active number button */
.pagination-btn.active {
  opacity: 1;
}

/* Bullet Points */
.bullet-points ul {
  list-style: none;
  padding: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.bullet-points li {
  flex: 1 1 45%;
  margin-bottom: 1rem;
}

.bullet-points h6::before {
  content: '•';
  color: var(--color-chenpi);
  font-size: 1rem;
  margin-right: 0.125rem;
}

/* Responsive */
@media (max-width: 1024px) {
  .carousel-container {
    flex-direction: column;
    align-items: center;
  }

  .carousel-text {
    text-align: center;
  }
}

</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  if (document.querySelector("#ingredient-slider")) {
    var ingredientSplide = new Splide("#ingredient-slider", {
      type: "fade",
      perPage: 1,
      pagination: false,
      arrows: false,
      speed: 800,
      easing: "cubic-bezier(0.25, 1, 0.5, 1)"
    }).mount();

    // ✅ Select all number buttons and ingredient descriptions
    const buttons = document.querySelectorAll(".pagination-btn");
    const ingredientItems = document.querySelectorAll(".ingredient-item");

    // ✅ Function to collapse all descriptions
    function collapseAll() {
      ingredientItems.forEach((item) => {
        item.classList.remove("expanded");
        item.style.maxHeight = "0";
        item.style.opacity = "0";
      });
    }

    // ✅ On load: Show all ingredient items, but collapsed
    ingredientItems.forEach((item) => {
      item.style.display = "block"; // Show all items
      item.style.maxHeight = "0"; // Keep them collapsed
      item.style.opacity = "1"; // Visible but not expanded
    });

    // ✅ Number Button Click Event
    buttons.forEach((button, index) => {
      button.addEventListener("click", function () {
        // Move Splide slider
        ingredientSplide.go(index);

        // Collapse all, then expand the selected one
        collapseAll();
        ingredientItems[index].classList.add("expanded");
        ingredientItems[index].style.maxHeight = "500px"; // Expand only the selected item
        ingredientItems[index].style.opacity = "1";

        // Remove active state from all buttons
        buttons.forEach((btn) => btn.classList.remove("active"));
        this.classList.add("active");
      });
    });

    // ✅ Sync text updates with Splide transitions
    ingredientSplide.on("moved", function (newIndex) {
      collapseAll();
      ingredientItems[newIndex].classList.add("expanded");
      ingredientItems[newIndex].style.maxHeight = "500px";
      ingredientItems[newIndex].style.opacity = "1";

      // Update active number
      buttons.forEach((btn) => btn.classList.remove("active"));
      buttons[newIndex].classList.add("active");
    });
  }
});




</script>


