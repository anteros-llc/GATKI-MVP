<div class="ingredient-carousel">
  <h2 class="carousel-title">Gentle yet effective ingredients</h2>
  
  <div class="carousel-container">
    {%- for block in section.blocks -%}
      {%- if block.type == 'ingredient' -%}
        <div class="carousel-slide" id="{{ block.settings.slide_id }}" {% if forloop.index > 1 %}style="display: none;"{% endif %}>
          
          <!-- Left Column: Image -->
          <div class="carousel-image">
            {%- if block.settings.image -%}
              <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.title }}">
            {%- endif -%}
          </div>

          <!-- Right Column: Text -->
          <div class="carousel-text">
            <h3 class="ingredient-title">{{ block.settings.title }}</h3>
            <p class="ingredient-description">{{ block.settings.description }}</p>

            <!-- Hidden Text (Toggles) -->
            <div class="ingredient-hidden-text" data-ingredient-id="{{ block.settings.slide_id }}" style="display: none;">
              {% if block.settings.percentage %}
                <div class="percentage"><h2>{{ block.settings.percentage }}</h2></div>
              {% endif %}
              <div class="bullet-points">
                <ul>
                  {% for i in (1..3) %}
                    {% assign heading_key = 'bullet_point_' | append: i | append: '_heading' %}
                    {% assign text_key = 'bullet_point_' | append: i | append: '_text' %}
                    {% if block.settings[heading_key] and block.settings[text_key] %}
                      <li>
                        <h6>{{ block.settings[heading_key] }}</h6>
                        <p>{{ block.settings[text_key] }}</p>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>

  <!-- Number Navigation -->
  <div class="carousel-pagination">
    {%- for block in section.blocks -%}
      {%- if block.type == 'ingredient' -%}
        <button type="button" class="pagination-btn {% if forloop.index == 1 %}active{% endif %}" 
          data-slide="{{ block.settings.slide_id }}">
          {{ block.settings.number }}
        </button>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

<style>
.ingredient-carousel {
  text-align: center;
  padding-bottom: 2rem;
}

.carousel-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  position: relative;
}

/* Slide Transitions */
.carousel-slide {
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: opacity 0.4s ease, transform 0.4s ease;
}

/* First Slide Visible */
.carousel-slide:first-child {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.carousel-image {
  position: relative;
}

.carousel-image img {
  width: 100%;
  max-width: 33rem;
  border-radius: 1rem;
  aspect-ratio: 1;
}

/* Numbers on Image */
.carousel-pagination {
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  gap: 1rem;
}

.pagination-btn {
  background: var(--color-blanco);
  border: 2px solid var(--color-chenpi);
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--color-chenpi);
  font-weight: 500;
  transition: all 0.3s ease;
}

.pagination-btn.active {
  background-color: var(--color-chenpi);
  color: var(--color-blanco);
  border-color: var(--color-chenpi);
  transform: scale(1.1);
}

/* Expand Ingredient Text */
.ingredient-hidden-text {
  max-height: 500px;
  opacity: 1;
  visibility: visible;
  transition: max-height 0.4s ease, opacity 0.4s ease, visibility 0.4s ease;
}

/* Smooth Hide/Show on Click */
.ingredient-hidden-text:not(.active) {
  max-height: 0;
  opacity: 0;
  visibility: hidden;
}

/* Responsive */
@media (max-width: 768px) {
  .carousel-container {
    flex-direction: column;
    text-align: center;
  }

  .carousel-text {
    text-align: center;
  }

  .carousel-image img {
    max-width: 22rem;
  }

  .carousel-pagination {
    top: 5%;
  }
}

</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const carousel = document.querySelector(".ingredient-carousel");
  if (!carousel) return;

  const slides = carousel.querySelectorAll(".carousel-slide");
  const buttons = carousel.querySelectorAll(".pagination-btn");
  const hiddenTexts = carousel.querySelectorAll(".ingredient-hidden-text");

  // ✅ Show all 4 ingredient texts on load
  hiddenTexts.forEach(text => {
    text.style.opacity = "1";
    text.style.maxHeight = "500px"; // Adjust height if needed
    text.style.visibility = "visible";
  });

  function resetState() {
    buttons.forEach(btn => btn.classList.remove("active"));
    slides.forEach(slide => {
      slide.style.opacity = "0";
      slide.style.visibility = "hidden";
      slide.style.transform = "translateY(10px)";
      slide.style.transition = "opacity 0.4s ease, transform 0.4s ease";
    });
    hiddenTexts.forEach(text => {
      text.style.maxHeight = "0";
      text.style.opacity = "0";
      text.style.visibility = "hidden";
    });
  }

  // ✅ Set initial state: first slide visible
  resetState();
  if (slides.length > 0) {
    slides[0].style.opacity = "1";
    slides[0].style.visibility = "visible";
    slides[0].style.transform = "translateY(0)";
  }

  // ✅ Click event on numbers
  buttons.forEach(button => {
    button.addEventListener("click", function () {
      const targetId = this.getAttribute("data-slide");
      const targetSlide = carousel.querySelector(`#${targetId}`);
      const targetText = carousel.querySelector(`[data-ingredient-id="${targetId}"]`);

      resetState();

      this.classList.add("active");

      if (targetSlide) {
        targetSlide.style.opacity = "1";
        targetSlide.style.visibility = "visible";
        targetSlide.style.transform = "translateY(0)";
      }

      // ✅ Expand selected text, hide others
      hiddenTexts.forEach(text => {
        if (text.getAttribute("data-ingredient-id") === targetId) {
          text.style.opacity = "1";
          text.style.visibility = "visible";
          text.style.maxHeight = "500px"; 
        }
      });
    });
  });
});


</script>


