<script>
document.addEventListener("DOMContentLoaded", function () {
  if (document.querySelector("#ingredient-slider")) {
    var ingredientSplide = new Splide("#ingredient-slider", {
      type: "fade",
      perPage: 1,
      pagination: false,
      arrows: false,
      speed: 800,
      easing: "cubic-bezier(0.25, 1, 0.5, 1)"
    }).mount();

    // Select elements
    const buttons = document.querySelectorAll(".pagination-btn");
    const ingredientItems = document.querySelectorAll(".ingredient-item");
    const ingredientDetails = document.querySelectorAll(".ingredient-hidden-text");

    // Ensure only one ingredient expands at a time
    function collapseAll() {
      ingredientDetails.forEach((detail) => {
        detail.style.display = "none";
        detail.style.opacity = "0";
        detail.classList.remove("expanded");
      });
    }

    // ✅ On load, all ingredients are visible but not expanded
    ingredientDetails.forEach((detail) => {
      detail.style.display = "none"; // Keep all details hidden initially
      detail.style.opacity = "0";
    });

    // ✅ Click event for number buttons
    buttons.forEach((button, index) => {
      button.addEventListener("click", function () {
        const targetId = this.getAttribute("data-slide");

        // Collapse all expanded details before opening the selected one
        collapseAll();

        // Expand selected ingredient details
        const targetDetail = document.querySelector(`.ingredient-item[data-ingredient-id="${targetId}"] .ingredient-hidden-text`);
        if (targetDetail) {
          targetDetail.style.display = "block";
          setTimeout(() => {
            targetDetail.style.opacity = "1";
            targetDetail.classList.add("expanded");
          }, 100);
        }

        // Move Splide to the correct slide
        ingredientSplide.go(index);

        // Ensure the clicked button is marked active
        buttons.forEach((btn) => btn.classList.remove("active"));
        this.classList.add("active");
      });
    });

    // ✅ Sync details expansion with Splide transitions
    ingredientSplide.on("moved", function (newIndex) {
      collapseAll();
      const newDetail = ingredientDetails[newIndex];
      if (newDetail) {
        newDetail.style.display = "block";
        setTimeout(() => {
          newDetail.style.opacity = "1";
          newDetail.classList.add("expanded");
        }, 100);
      }

      // Update active button
      buttons.forEach((btn) => btn.classList.remove("active"));
      buttons[newIndex].classList.add("active");
    });
  }
});


</script>


