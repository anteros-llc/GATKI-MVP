<div
  data-oke-badge
  data-oke-layout="minimal"
  data-oke-star-background-color="#FAF6F0"
  data-oke-star-height-px="12"
  data-oke-star-border-enabled="true"
  data-oke-star-border-color="#E65919"
  data-oke-star-foreground-color="#E65919"
></div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const badgeCount = document.querySelector(".oke-minimalBadge-count");
    if (badgeCount) {
      const reviewText = badgeCount.querySelector("span:last-child");
      if (reviewText) {
        // Clone the REVIEW span
        const clonedReviewText = reviewText.cloneNode(true);

        // Remove the original REVIEW span
        reviewText.remove();

        // Append the cloned REVIEW span to the parent container
        const badgeContainer = document.querySelector(".oke-minimalBadge");
        badgeContainer.appendChild(clonedReviewText);
      }
    }
  });
</script>

<style>
  .oke-minimalBadge {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .oke-minimalBadge-stars {
    display: flex;
    align-items: center;
    margin-right: 8px;
  }

  .oke-minimalBadge-count {
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    line-height: 1.1;
    font-weight: 400;
  }

  .oke-minimalBadge span:last-child {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    margin-left: 8px;
  }
</style>
